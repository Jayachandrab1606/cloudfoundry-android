<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="DashboardButton">
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:drawablePadding">2dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@drawable/abs__item_background_holo_light</item>
    </style>

    <style name="InfoPrimary">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@android:color/primary_text_light</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="InfoSecondary">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@android:color/secondary_text_light</item>
        <item name="android:textSize">14sp</item>
        <item name="android:layout_marginBottom">8dp</item>
    </style>
    
    <style name="IconInList">
        <item name="android:layout_width">32dp</item>
        <item name="android:layout_height">32dp</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>
    
    <style name="ListItemPrimary">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/cf_primary</item>
        <item name="android:textSize">18sp</item>
    </style>

    <color name="cf_primary">#0096d1</color>
    <color name="cf_secondary">#0d3d66</color>
    <color name="cf_text">#0b3a66</color>
    <color name="cf_link">#00a8d6</color>
    <color name="cf_callout">#f77343</color>
    <color name="cf_background">#e8e8e8</color>
    
    <color name="status_stopped">#B22222</color>
    <color name="status_started">#008000</color>
    <color name="status_updating">#808000</color>
    
    <color name="divider_color">#aaa</color>
    
    
</resources>