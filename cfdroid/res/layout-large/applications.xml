<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <fragment android:name="org.cloudfoundry.android.cfdroid.applications.ApplicationsListFragment"
              android:id="@+id/applications_list"
              android:layout_weight="1"
              android:layout_width="0dp"
              android:layout_height="match_parent" />

    <fragment android:name="org.cloudfoundry.android.cfdroid.applications.ApplicationDetailViewPager"
              android:id="@+id/application_tabs"
              android:layout_weight="2"
              android:layout_width="0dp"
              android:layout_height="match_parent" />

</LinearLayout>